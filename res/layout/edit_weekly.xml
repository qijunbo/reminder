<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/item.text.weekly"
                    android:padding="5dp"
                    android:src="@drawable/img_weekly" />

                <TextView
                    android:id="@+id/from"
                    style="@style/Widget.SampleMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/intro_message_weekly"
                    android:textSize="14sp" />

                <Space
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/intro_message_nothing" />
            </LinearLayout>

            <TextView
                style="@style/AppBaseTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_title" />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:textSize="14sp" >
            </EditText>

            <LinearLayout
                android:id="@+id/gridViewDaysOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Saturday"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Sunday"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Monday" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Tuesday" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Wednesday" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Thursday" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day_Friday" />

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:id="@+id/day0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />

                    <CheckBox
                        android:id="@+id/day6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="setSelectedDay" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/AppBaseTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_time" />

            <EditText
                android:id="@+id/edit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="time"
                android:onClick="showTimePickerDialog"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Space
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/text_get_message" />

                <ImageButton
                    android:id="@+id/fromMessage"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/text_get_message"
                    android:onClick="actionLoadMessage"
                    android:src="@drawable/ic_action_message" />

                <ImageButton
                    android:id="@+id/caputure"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/text_capture"
                    android:onClick="actionCaptureImage"
                    android:src="@drawable/ic_action_camera" />

                <ImageButton
                    android:id="@+id/loadImage"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/text_get_message"
                    android:onClick="actionLoadImage"
                    android:src="@drawable/ic_action_picture" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|left"
                android:hint="@string/text_detail"
                android:imeActionLabel="@string/app_name"
                android:inputType="textMultiLine"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/picture"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                android:contentDescription="@string/intro_message_nothing"
                android:onClick="actionViewImage"
                android:padding="5dp" />

            <TextView
                style="@style/AppBaseTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_expiretime" />

            <EditText
                android:id="@+id/edit_expire_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/text_expiretime_hint"
                android:inputType="date"
                android:onClick="showExpireDatePickerDialog"
                android:textSize="14sp" >
            </EditText>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonSave"
        style="?android:buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="actionSaveAlarm"
        android:text="@string/button.save" />

</LinearLayout>