<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/Widget.SampleMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_launcher"
        android:gravity="center_vertical"
        android:text="@string/text_about_message"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/text_about_software"
            android:padding="10dp"
            android:src="@drawable/logo_qijunbo" />

        <TextView
            style="@style/Widget.SampleMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/text_about_software"
            android:textSize="14sp" />

        <Space
            style="?android:buttonBarButtonStyle"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/intro_message_nothing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/text_about_ui"
            android:padding="10dp"
            android:src="@drawable/img_monthly" />

        <TextView
            style="@style/Widget.SampleMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/text_about_ui"
            android:textSize="14sp" />

        <Space
            style="?android:buttonBarButtonStyle"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/intro_message_nothing" />
    </LinearLayout>

</LinearLayout>