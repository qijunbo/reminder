<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/action_settings_ways" >
        <SwitchPreference
            android:defaultValue="false"
            android:key="notifyInAdvance"
            android:summary="@string/text_setting_inadvance" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifyBarEnable"
            android:summary="@string/text_setting_notifyenable" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="dialogEnable"
            android:summary="@string/text_setting_dialogenable" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="autoRemoveExpiredItem"
            android:summary="@string/text_setting_autoRemoveExpiredItem" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="playSound"
            android:summary="@string/text_setting_playSound" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="vibrate"
            android:summary="@string/text_setting_vibrate" />
    </PreferenceCategory>

</PreferenceScreen>